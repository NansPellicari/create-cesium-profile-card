{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "strict": true,
    "target": "esnext",
    "module": "commonjs",
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "**/*.ts"
  ]
}
